# Security Settings
SECRET_KEY=your-very-long-secret-key-at-least-32-characters-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Configuration
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=info

# Database Configuration (для Docker используется PostgreSQL)
DATABASE_URL=postgresql://webapp_user:webapp_password@postgres:5432/webapp_db

# PostgreSQL Settings (используются в docker-compose.yml)
POSTGRES_USER=webapp_user
POSTGRES_PASSWORD=webapp_password
POSTGRES_DB=webapp_db
POSTGRES_PORT=5432

# Web Application Port
WEB_PORT=8000

# Nginx Proxy Manager Ports
# HTTP Port
NPM_HTTP_PORT=80
# HTTPS Port
NPM_HTTPS_PORT=443
# Admin Interface Port
NPM_ADMIN_PORT=81

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=tngtech/deepseek-r1t2-chimera:free
