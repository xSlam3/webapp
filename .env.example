# Nginx Proxy Manager Database Configuration
NPM_DB_USER=npm_user
NPM_DB_PASSWORD=your_npm_secure_password_change_this
NPM_DB_NAME=npm_db
NPM_DB_ROOT_PASSWORD=your_npm_root_secure_password_change_this
DISABLE_IPV6=true

# Application Database Configuration (PostgreSQL)
POSTGRES_DB=knowledge_base
POSTGRES_USER=kb_user
POSTGRES_PASSWORD=your_secure_password_here_change_this

# Security Configuration
SECRET_KEY=your-very-long-secret-key-at-least-32-characters-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Configuration
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=info

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Backup Configuration
BACKUP_KEEP_DAYS=7
